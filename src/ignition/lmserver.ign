{
  "ignition": {
    "version": "3.3.0"
  },
  "kernelArguments": {
    "shouldExist": [
      "selinux=0"
    ]
  },
  "passwd": {
    "users": [
      {
        "name": "core",
        "sshAuthorizedKeys": [
          "ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIMFJhPTPfNQuNCuz9AESupcGOwLtg8Xp+qTnv2+qU94O",
          "ssh-rsa ",
          "ssh-rsa "
        ]
      }
    ]
  },
  "storage": {
    "files": [
      {
        "path": "/etc/hostname",
        "contents": {
          "compression": "",
          "source": "data:,lmserver"
        },
        "mode": 420
      }
    ],
    "links": [
      {
        "path": "/etc/localtime",
        "target": "/usr/share/zoneinfo/Europe/Amsterdam"
      }
    ]
  },
  "systemd": {
    "units": [
      {
        "contents": "[Unit]\nDescription=Mount storage directory\n\n[Mount]\nWhat=LABEL=storage\nWhere=/var/mnt/storage\nType=btrfs\nOptions=defaults,nofail,noatime,autodefrag\n\n[Install]\nWantedBy=multi-user.target\n",
        "enabled": true,
        "name": "var-mnt-storage.mount"
      },
      {
        "contents": "[Unit]\nDescription=btrfs scrub of the storage filesystem\n\n[Service]\nExecStart=btrfs scrub start -Bd /dev/disk/by-label/storage\n\n[Install]\nWantedBy=multi-user.target\n",
        "enabled": true,
        "name": "scrubber.service"
      },
      {
        "contents": "[Unit]\nDescription=Scrubber service timer\n\n[Timer]\nOnCalendar=monthly\nAccuracySec=12h\nPersistent=true\nUnit=scrubber.service\n\n[Install]\nWantedBy=basic.target\n",
        "enabled": true,
        "name": "scrubber.timer"
      },
      {
        "enabled": true,
        "name": "docker.service"
      },
      {
        "contents": "[Unit]\nDescription=Portainer Service\nAfter=docker.service\nRequires=docker.service\n\n[Service]\nRestart=always\nExecStartPre=-mkdir -p /var/mnt/storage/docker/portainer\nExecStartPre=-/usr/bin/docker rm -f portainer\nExecStartPre=-/usr/bin/docker pull portainer/portainer-ce:alpine\nExecStartPre=/usr/bin/docker create \\\n  --name portainer \\\n  --rm \\\n  --volume /var/mnt/storage/docker/portainer:/data:rw \\\n  --volume /var/run/docker.sock:/var/run/docker.sock:ro \\\n  --log-driver syslog \\\n  --log-opt 'syslog-address=udp://127.0.0.1:515' \\\n  --log-opt 'tag={{.Name}}/{{.FullID}}' \\\n  --publish 9443:9443 \\\n  portainer/portainer-ce:alpine\nExecStart=/usr/bin/docker start -a portainer\n\n[Install]\nWantedBy=multi-user.target\n",
        "enabled": true,
        "name": "portainer.service"
      }
    ]
  }
}
