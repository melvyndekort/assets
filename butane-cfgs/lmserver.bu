variant: fcos
version: 1.4.0
passwd:
  users:
    - name: core
      ssh_authorized_keys:
      - ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIMFJhPTPfNQuNCuz9AESupcGOwLtg8Xp+qTnv2+qU94O
      - ssh-rsa 
      - ssh-rsa 
storage:
  directories:
    - path: /storage
  files:
    - path: /etc/hostname
      mode: 0644
      contents:
        inline: lmserver
  links:
    - path: /etc/localtime
      target: /usr/share/zoneinfo/Europe/Amsterdam
systemd:
  units:
    - name: storage.mount
      enabled: true
      contents: |
        [Unit]
        Description=Mount storage directory

        [Mount]
        What=/dev/disk/by-label/storage
        Where=/storage
        Type=btrfs
        Options=defaults,nofail,noatime,autodefrag

        [Install]
        WantedBy=multi-user.target
    - name: docker.service
      enabled: true
    - name: portainer.service
      enabled: true
      contents: |
        [Unit]
        Description=Run Portainer
        After=network-online.target
        Wants=network-online.target
        
        [Service]
        ExecStartPre=mkdir -p /storage/docker/portainer
        ExecStartPre=-/usr/bin/docker rm -f %n
        ExecStartPre=-/usr/bin/docker network create --attachable lmserver
        ExecStartPre=-/usr/bin/docker pull portainer/portainer-ce:alpine
        ExecStart=/usr/bin/docker run \
          --name %n \
          --detach \
          --volume /storage/docker/portainer:/data \
          --volume /var/run/podman.sock:/var/run/docker.sock:ro \
          --log-driver syslog \
          --log-opt syslog-address: udp://127.0.0.1:515 \
          --log-opt tag: {{.Name}}/{{.FullID}} \
          --network lmserver \
          --publish 9000:9000 \
          --publish 9443:9443 \
          --label traefik.enable=true \
          --label traefik.http.routers.portainer.entrypoints=websecure \
          --label traefik.http.routers.portainer.rule=Host(`lmserver.mdekort.nl`) && PathPrefix(`/portainer`) \
          --label traefik.http.services.portainer.loadbalancer.server.port=9000 \
          --label traefik.http.routers.portainer.tls=true \
          --label traefik.http.routers.portainer.tls.certresolver=mdekort \
          --label traefik.http.middlewares.portainer_stripprefix.stripprefix.prefixes=/portainer \
          --label traefik.http.middlewares.portainer_stripprefix.stripprefix.forceslash=false \
          --label traefik.http.routers.portainer.middlewares=portainer_stripprefix@docker \
          portainer/portainer-ce:alpine \
          --admin-password admin

        ExecStop=/usr/bin/docker stop %n
        ExecStopPost=/usr/bin/docker rm -f %n
        Type=forking
        
        [Install]
        WantedBy=multi-user.target
